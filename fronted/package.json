{
  "name": "bun-react-template",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "bun run scripts/dev.ts",
    "tailwind:build": "bunx tailwindcss -i ./src/index.css -o ./src/styles.css --minify",
    "tailwind:watch": "bunx tailwindcss -i ./src/index.css -o ./src/styles.css --watch",
    "build": "bun run tailwind:build && bun build ./src/index.html --outdir=dist --sourcemap --target=browser --minify --define:process.env.NODE_ENV='\"production\"' --env='BUN_PUBLIC_*'",
    "start": "bun run build"
  },
  "dependencies": {
    "@gsap/react": "^2.1.2",
    "@tanstack/react-query": "^5.62.7",
    "@tanstack/react-router": "^1.59.12",
    "@radix-ui/react-slot": "^1.1.0",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "gsap": "^3.12.5",
    "lucide-react": "^0.469.0",
    "react": "^19",
    "react-dom": "^19",
    "tailwind-merge": "^2.5.2"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "autoprefixer": "^10.4.19",
    "postcss": "^8.4.49",
    "tailwindcss": "^3.4.15"
  }
}
