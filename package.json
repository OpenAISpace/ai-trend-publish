{
  "name": "trend-publish",
  "version": "1.0.0",
  "description": "基于 Bun 开发的趋势发现和内容发布系统，支持多源数据采集、智能总结和自动发布到微信公众号。",
  "main": "src/index.ts",
  "type": "module",
  "scripts": {
    "start": "bun run src/index.ts",
    "dev": "bun run --watch src/index.ts",
    "test": "bun run src/test.ts",
    "build:win": "bun build src/test.ts --compile --target=bun-windows-x64 --outfile=trendFinder.exe",
    "build:mac-x64": "bun build src/test.ts --compile --target=bun-darwin-x64 --outfile=trendFinder-mac-x64",
    "build:mac-arm64": "bun build src/test.ts --compile --target=bun-darwin-arm64 --outfile=trendFinder-mac-arm64",
    "build:linux-x64": "bun build src/test.ts --compile --target=bun-linux-x64 --outfile=trendFinder-linux-x64",
    "build:linux-arm64": "bun build src/test.ts --compile --target=bun-linux-arm64 --outfile=trendFinder-linux-arm64",
    "build:all": "bun run build:win && bun run build:mac-x64 && bun run build:mac-arm64 && bun run build:linux-x64 && bun run build:linux-arm64",
    "build:docs": "bun run scripts/md2html.ts"
  },
  "dependencies": {
    "@logtape/logtape": "^0.7.0",
    "axios": "^1.7.9",
    "cheerio": "^1.0.0",
    "cli-progress": "^3.12.0",
    "dotenv": "^16.4.5",
    "drizzle-kit": "^0.30.5",
    "drizzle-orm": "^0.40.0",
    "ejs": "^3.1.10",
    "fast-xml-parser": "^4.5.0",
    "firecrawl": "^1.7.1",
    "highlight.js": "^11.10.0",
    "lru-cache": "^11.0.2",
    "marked": "^14.1.3",
    "mysql2": "^3.13.0",
    "node-cron": "^3.0.3",
    "openai": "^4.75.0",
    "sharp": "^0.34.3",
    "zod": "^3.25.0"
  },
  "devDependencies": {
    "@types/cli-progress": "^3.11.6",
    "@types/ejs": "^3.1.5",
    "@types/node-cron": "^3.0.11",
    "@types/cheerio": "^0.22.31",
    "bun-types": "latest"
  },
  "trustedDependencies": ["sharp"]
}